<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1"
    android:layout_centerHorizontal="true"
    android:background="@mipmap/p"
    >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/head"
            android:text="SAMSUNG GALAXY BUDS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"/>
        <ImageView
            android:id="@+id/p1image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/buds"
            />
        <Button
            android:id="@+id/buynow"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:text="BUY NOW @8499"
            android:textSize="20dp"
            />
        <TableRow>
            <TextView
                android:text="Model Name"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="Samsung Galaxy Buds FE"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>

        <!-- Row 2: Product Dimensions -->
        <TableRow>
            <TextView
                android:text="Product Dimensions"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="5 x 5 x 2.8 cm"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>

        <!-- Row 3: Weight -->
        <TableRow>
            <TextView
                android:text="Weight"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="51 Grams"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>

        <!-- Row 4: Connectivity -->
        <TableRow>
            <TextView
                android:text="Connectivity"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="Wireless"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>

        <!-- Row 5: Colour -->
        <TableRow>
            <TextView
                android:text="Colour"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="Graphite"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>

        <!-- Row 6: Battery Life -->
        <TableRow>
            <TextView
                android:text="Battery Life"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="30 hours"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>

        <!-- Row 7: Special Feature -->
        <TableRow>
            <TextView
                android:text="Special Feature"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="Noise Cancellation"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>
        <TableRow>
            <TextView />
            <TextView />
        </TableRow>
    </TableLayout>
</ScrollView>
