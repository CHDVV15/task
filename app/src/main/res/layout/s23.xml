                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Display Size"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
