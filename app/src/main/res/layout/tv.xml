                android:text="60 Hz"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Aspect Ratio"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="16:09"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Dimensions"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
