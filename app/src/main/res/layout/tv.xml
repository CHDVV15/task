                android:text="43 Inch (109.22 cm)"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Resolution"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
            <TextView
                android:text="4K, 3840 x 2160 Pixels"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="Refresh Rate"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
