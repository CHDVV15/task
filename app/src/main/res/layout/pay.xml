<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@mipmap/paybg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENT"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/heading"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pay"
        android:textColor="@color/white"
        android:text="Enter Your Card Number"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/heading"
        />
    <EditText
        android:id="@+id/editCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="16"
        android:layout_marginBottom="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cvv"
        android:textColor="@color/white"
        android:layout_below="@+id/editCardNumber"
        android:layout_marginTop="30dp"
        android:text="CVV"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/editCVV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:textColor="@color/white"
        android:inputType="numberPassword"
        android:maxLength="3"
        android:layout_below="@id/cvv"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/btnMakePayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Make Payment"
        android:layout_below="@+id/editCVV"
        android:layout_marginTop="30dp"/>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMakePayment"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:max="100"
        android:progress="0"/>
</RelativeLayout>
