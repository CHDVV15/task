<!-- res/layout/activity_thank_you.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thank"
    android:background="@mipmap/option">

    <TextView
        android:id="@+id/textThankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for shopping!"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="175dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/thankbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textThankYou"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        android:text="SHOP AGAIN"
        android:width="200dp"
        android:height="65dp"
        android:onClick="onClick"/>
</RelativeLayout>
